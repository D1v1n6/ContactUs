@model List<SolidCoreMvc.Models.Product>

<h2>Product List</h2>

<p>
    <a class="btn btn-primary" href="/Product/Create">Add Product</a>
</p>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
